<!DOCTYPE html>
<html>
<head>
  <title><%#=title#%></title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!--<meta name="description" content="<%=t("head.meta.description")%>">-->
  <!--<meta name="keywords" content="<%=t("head.meta.keywords")%>">-->
  <meta name="keywords" content="<%#= #meta_keywords %#>" />
  <meta name="description" content="<%#= meta_description %#>" />
  <meta name="author" content="<%=t("head.meta.author")%>">
  <%= favicon_link_tag 'favicon.ico' %>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%#= stylesheet_link_tag    "application", media: "all" %>
  <%#= javascript_include_tag  "application" %>

  <%= favicon_link_tag 'favicon.ico' %>
  <script>
      $(document).ready(function(){
          jQuery('.camera_wrap').camera();
      });
  </script>
  <%= csrf_meta_tags %>

</head>

<body>

<%= render :partial=>'home/header' %>

<section>
  <%= yield %>
</section>

<%= render :partial=>'home/footer' %>
<script>
    $(document).ready(function() {
        $("a.fancybox").fancybox();
    });
</script>
<script>
    $(document).ready(function () {
        var heights = $(".thumbnail").map(function () {
                    return $(this).height();
                }).get(),

                maxHeight = Math.max.apply(null, heights);
        $(".thumbnail").height(maxHeight);
    });
</script>
</body>

</html>
